<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.syngenta.rhoffman.syngenta"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.syngenta.rhoffman.syngenta.TopLoadTrue"
            android:label="@string/title_activity_top_load"
            android:parentActivityName="com.syngenta.rhoffman.syngenta.MainTabbedActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syngenta.rhoffman.syngenta.MainTabbedActivity" />
        </activity>
        <activity
            android:name="com.syngenta.rhoffman.syngenta.TopLoadFalse"
            android:label="@string/title_activity_top_load"
            android:parentActivityName="com.syngenta.rhoffman.syngenta.MainTabbedActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syngenta.rhoffman.syngenta.MainTabbedActivity" />
        </activity>
        <activity
            android:name="com.syngenta.rhoffman.syngenta.DisplayProduct"
            android:label="@string/title_activity_display_product"
            android:parentActivityName="com.syngenta.rhoffman.syngenta.MainTabbedActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syngenta.rhoffman.syngenta.MainTabbedActivity" />
        </activity>
        <activity
            android:name="com.syngenta.rhoffman.syngenta.MainTabbedActivity"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.syngenta.rhoffman.syngenta.DisplayBulkSite"
            android:label="@string/title_activity_display_bulk_site"
            android:parentActivityName="com.syngenta.rhoffman.syngenta.MainTabbedActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syngenta.rhoffman.syngenta.MainTabbedActivity" />
        </activity>
    </application>

</manifest>