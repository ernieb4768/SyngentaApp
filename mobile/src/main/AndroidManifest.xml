<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.syngenta.rhoffman.syngenta" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProductWeightInfo"
            android:label="@string/title_activity_product_weight_info"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syngenta.rhoffman.syngenta.MainActivity" />
        </activity>
        <activity
            android:name=".TopLoadMatrix"
            android:label="@string/title_activity_top_load_matrix"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syngenta.rhoffman.syngenta.MainActivity" />
        </activity>
        <activity
            android:name=".TopLoadTrue"
            android:label="@string/title_activity_top_load_true"
            android:parentActivityName=".TopLoadMatrix" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syngenta.rhoffman.syngenta.TopLoadMatrix" />
        </activity>
        <activity
            android:name=".TopLoadFalse"
            android:label="@string/title_activity_top_load_false"
            android:parentActivityName=".TopLoadMatrix" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syngenta.rhoffman.syngenta.TopLoadMatrix" />
        </activity>
        <activity
            android:name=".DisplayProduct"
            android:label="@string/title_activity_display_product"
            android:parentActivityName=".ProductWeightInfo" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syngenta.rhoffman.syngenta.ProductWeightInfo" />
        </activity>
        <activity
            android:name=".Help"
            android:label="@string/title_activity_help"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syngenta.rhoffman.syngenta.MainActivity" />
        </activity>
    </application>

</manifest>
